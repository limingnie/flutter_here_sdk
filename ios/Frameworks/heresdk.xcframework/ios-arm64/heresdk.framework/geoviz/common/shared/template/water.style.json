{
    "styles": [
        {
            "id": "water_lines",
            "styleSet": "tilezen_lines",
            "when": ["ref", "Is.Water"],
            "technique": "line",
            "description": "Water",
            "category": "water-line",
            "attr": {
                "shadow-receiver": true,
                "width": [
                    "case",
                    ["ref", "Is.Intermittent.River"],
                    ["world-ppi-scale", ["ref", "IntermittentRiver.Width"]],
                    ["world-ppi-scale", ["ref", "River.Width"]]
                ],
                "color": [
                    "case",
                    ["ref", "Is.Intermittent.River"],
                    ["ref", "IntermittentRiver.Color"],
                    ["ref", "Is.River"],
                    ["ref", "River.Color"],
                    ["ref", "Is.Canal"],
                    ["ref", "CanalWaterChannel.Color"],
                    ["ref", "River.Color"]
                ],
                "smooth-steps": ["make-vector", 4, 0.6]
            }
        },
        {
            "id": "water_line_labels",
            "styleSet": "tilezen_lines",
            "when": ["ref", "Is.WaterLineLabel"],
            "technique": "text",
            "description": "Water Line Labels",
            "category": "water-labels",
            "attr": {
                "margin": ["ref", "defaultMargin"],
                "persisting-margin-reducing": ["ref", "defaultPersistingMarginReducing"],
                "attribute-name": [
                    "case",
                    ["any", ["ref", "Is.Intermittent.River"], ["ref", "Is.River"], ["ref", "Is.Canal"]],
                    ["ref", "Water.CountryCode"],
                    null
                ],
                "far-threshold-range": 0.015,
                "fade-time": 0.3,
                "outline-size": [
                    "case",
                    ["ref", "Is.Intermittent.River"],
                    ["ppi-scale", ["ref", "IntermittentRiver.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.River"],
                    ["ppi-scale", ["ref", "River.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Canal"],
                    ["ppi-scale", ["ref", "CanalWaterChannel.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]],
                    ["ppi-scale", 0, ["ref", "ScalePpi.labels"]]
                ],
                "replaceable": true,
                "new-label-spread-frames": 10,
                "slant-amount": [
                    "case",
                    ["ref", "Is.Intermittent.River"],
                    [
                        "case",
                        ["ref", "IntermittentRiver.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ],
                    ["ref", "Is.River"],
                    [
                        "case",
                        ["ref", "River.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ],
                    ["ref", "Is.Canal"],
                    [
                        "case",
                        ["ref", "CanalWaterChannel.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ],
                    null
                ],
                "tracking-space": [
                    "case",
                    ["ref", "Is.Intermittent.River"],
                    ["ref", "IntermittentRiver.FontStyle.Tracking"],
                    ["ref", "Is.River"],
                    ["ref", "River.FontStyle.Tracking"],
                    ["ref", "Is.Canal"],
                    ["ref", "CanalWaterChannel.FontStyle.Tracking"],
                    null
                ],
                "outline-color": [
                    "case",
                    ["ref", "Is.Intermittent.River"],
                    ["ref", "IntermittentRiver.FontStyle.OutlineColor"],
                    ["ref", "Is.River"],
                    ["ref", "River.FontStyle.OutlineColor"],
                    ["ref", "Is.Canal"],
                    ["ref", "CanalWaterChannel.FontStyle.OutlineColor"],
                    null
                ],
                "far-threshold": 0.85,
                "color": [
                    "case",
                    ["ref", "Is.Intermittent.River"],
                    ["ref", "IntermittentRiver.FontStyle.Color"],
                    ["ref", "Is.River"],
                    ["ref", "River.FontStyle.Color"],
                    ["ref", "Is.Canal"],
                    ["ref", "CanalWaterChannel.FontStyle.Color"],
                    "#0000ff"
                ],
                "size": [
                    "case",
                    ["ref", "Is.Intermittent.River"],
                    ["ppi-scale", ["ref", "IntermittentRiver.FontStyle.Size"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.River"],
                    ["ppi-scale", ["ref", "River.FontStyle.Size"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Canal"],
                    ["ppi-scale", ["ref", "CanalWaterChannel.FontStyle.Size"], ["ref", "ScalePpi.labels"]],
                    ["ppi-scale", ["ref", "FallbackLabel.FontStyle.Size"], ["ref", "ScalePpi.labels"]]
                ],
                "font": [
                    "case",
                    ["any", ["ref", "Is.Intermittent.River"], ["ref", "Is.River"], ["ref", "Is.Canal"]],
                    ["ref", "Water.Font"],
                    ["ref", "defaultFont"]
                ],
                "shape": "line"
            }
        },
        {
            "id": "water_point_labels",
            "styleSet": "tilezen_points",
            "when": ["ref", "Is.WaterPointLabel"],
            "technique": "text",
            "description": "Water Point Labels",
            "category": [
                "case",
                ["ref", "Is.Ocean"],
                "ocean-labels",
                ["ref", "Is.Sea"],
                "sea-labels",
                "water-labels"
            ],
            "attr": {
                "margin": ["ref", "defaultMargin"],
                "persisting-margin-reducing": ["ref", "defaultPersistingMarginReducing"],
                "attribute-name": [
                    "case",
                    [
                        "any",
                        ["ref", "Is.Canal"],
                        ["ref", "Is.River"],
                        ["ref", "Is.Bay"],
                        ["ref", "Is.Lake"],
                        ["ref", "Is.Ocean"],
                        ["ref", "Is.Sea"],
                        ["ref", "Is.Fjord"],
                        ["ref", "Is.Strait"]
                    ],
                    ["ref", "Water.CountryCode"],
                    null
                ],
                "far-threshold-range": 0.015,
                "fade-time": 0.3,
                "break-line": true,
                "outline-size": [
                    "case",
                    ["ref", "Is.Canal"],
                    ["ppi-scale", ["ref", "CanalWaterChannel.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.River"],
                    ["ppi-scale", ["ref", "River.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Bay"],
                    ["ppi-scale", ["ref", "BayHarbour.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Lake"],
                    ["ppi-scale", ["ref", "Lake.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Ocean"],
                    ["ppi-scale", ["ref", "Ocean.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Sea"],
                    ["ppi-scale", ["ref", "Sea.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Fjord"],
                    ["ppi-scale", ["ref", "Fjord.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Strait"],
                    ["ppi-scale", ["ref", "Strait.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]],
                    ["ppi-scale", ["ref", "Sea.FontStyle.OutlineWidth"], ["ref", "ScalePpi.labels"]]
                ],
                "replaceable": true,
                "new-label-spread-frames": 10,
                "leading-space": [
                    "case",
                    ["ref", "Is.Canal"],
                    ["ref", "CanalWaterChannel.FontStyle.Leading"],
                    ["ref", "Is.River"],
                    ["ref", "River.FontStyle.Leading"],
                    ["ref", "Is.Bay"],
                    ["ref", "BayHarbour.FontStyle.Leading"],
                    ["ref", "Is.Lake"],
                    ["ref", "Lake.FontStyle.Leading"],
                    ["ref", "Is.Ocean"],
                    ["ref", "Ocean.FontStyle.Leading"],
                    ["ref", "Is.Sea"],
                    ["ref", "Sea.FontStyle.Leading"],
                    ["ref", "Is.Fjord"],
                    ["ref", "Fjord.FontStyle.Leading"],
                    ["ref", "Is.Strait"],
                    ["ref", "Strait.FontStyle.Leading"],
                    ["ref", "Sea.FontStyle.Leading"]
                ],
                "slant-amount": [
                    "case",
                    ["ref", "Is.Canal"],
                    [
                        "case",
                        ["ref", "CanalWaterChannel.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ],
                    ["ref", "Is.River"],
                    [
                        "case",
                        ["ref", "River.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ],
                    ["ref", "Is.Bay"],
                    [
                        "case",
                        ["ref", "BayHarbour.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ],
                    ["ref", "Is.Lake"],
                    [
                        "case",
                        ["ref", "Lake.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ],
                    ["ref", "Is.Ocean"],
                    [
                        "case",
                        ["ref", "Ocean.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ],
                    ["ref", "Is.Sea"],
                    [
                        "case",
                        ["ref", "Sea.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ],
                    ["ref", "Is.Fjord"],
                    [
                        "case",
                        ["ref", "Fjord.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ],
                    ["ref", "Is.Strait"],
                    [
                        "case",
                        ["ref", "Strait.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ],
                    [
                        "case",
                        ["ref", "Sea.FontStyle.Oblique"],
                        ["ref", "TextSlant10Degrees"],
                        ["ref", "TextSlant0Degrees"]
                    ]
                ],
                "tracking-space": [
                    "case",
                    ["ref", "Is.Canal"],
                    ["ref", "CanalWaterChannel.FontStyle.Tracking"],
                    ["ref", "Is.River"],
                    ["ref", "River.FontStyle.Tracking"],
                    ["ref", "Is.Bay"],
                    ["ref", "BayHarbour.FontStyle.Tracking"],
                    ["ref", "Is.Lake"],
                    ["ref", "Lake.FontStyle.Tracking"],
                    ["ref", "Is.Ocean"],
                    ["ref", "Ocean.FontStyle.Tracking"],
                    ["ref", "Is.Sea"],
                    ["ref", "Sea.FontStyle.Tracking"],
                    ["ref", "Is.Fjord"],
                    ["ref", "Fjord.FontStyle.Tracking"],
                    ["ref", "Is.Strait"],
                    ["ref", "Strait.FontStyle.Tracking"],
                    ["ref", "Sea.FontStyle.Tracking"]
                ],
                "outline-color": [
                    "case",
                    ["ref", "Is.Canal"],
                    ["ref", "CanalWaterChannel.FontStyle.OutlineColor"],
                    ["ref", "Is.River"],
                    ["ref", "River.FontStyle.OutlineColor"],
                    ["ref", "Is.Bay"],
                    ["ref", "BayHarbour.FontStyle.OutlineColor"],
                    ["ref", "Is.Lake"],
                    ["ref", "Lake.FontStyle.OutlineColor"],
                    ["ref", "Is.Ocean"],
                    ["ref", "Ocean.FontStyle.OutlineColor"],
                    ["ref", "Is.Sea"],
                    ["ref", "Sea.FontStyle.OutlineColor"],
                    ["ref", "Is.Fjord"],
                    ["ref", "Fjord.FontStyle.OutlineColor"],
                    ["ref", "Is.Strait"],
                    ["ref", "Strait.FontStyle.OutlineColor"],
                    ["ref", "Sea.FontStyle.OutlineColor"]
                ],
                "far-threshold": 0.85,
                "color": [
                    "case",
                    ["ref", "Is.Canal"],
                    ["ref", "CanalWaterChannel.FontStyle.Color"],
                    ["ref", "Is.River"],
                    ["ref", "River.FontStyle.Color"],
                    ["ref", "Is.Bay"],
                    ["ref", "BayHarbour.FontStyle.Color"],
                    ["ref", "Is.Lake"],
                    ["ref", "Lake.FontStyle.Color"],
                    ["ref", "Is.Ocean"],
                    ["ref", "Ocean.FontStyle.Color"],
                    ["ref", "Is.Sea"],
                    ["ref", "Sea.FontStyle.Color"],
                    ["ref", "Is.Fjord"],
                    ["ref", "Fjord.FontStyle.Color"],
                    ["ref", "Is.Strait"],
                    ["ref", "Strait.FontStyle.Color"],
                    ["ref", "Sea.FontStyle.Color"]
                ],
                "size": [
                    "case",
                    ["ref", "Is.Canal"],
                    ["ppi-scale", ["ref", "CanalWaterChannel.FontStyle.Size"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.River"],
                    ["ppi-scale", ["ref", "River.FontStyle.Size"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Bay"],
                    ["ppi-scale", ["ref", "BayHarbour.FontStyle.Size"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Lake"],
                    ["ppi-scale", ["ref", "Lake.FontStyle.Size"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Ocean"],
                    ["ppi-scale", ["ref", "Ocean.FontStyle.Size"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Sea"],
                    ["ppi-scale", ["ref", "Sea.FontStyle.Size"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Fjord"],
                    ["ppi-scale", ["ref", "Fjord.FontStyle.Size"], ["ref", "ScalePpi.labels"]],
                    ["ref", "Is.Strait"],
                    ["ppi-scale", ["ref", "Strait.FontStyle.Size"], ["ref", "ScalePpi.labels"]],
                    ["ppi-scale", ["ref", "Sea.FontStyle.Size"], ["ref", "ScalePpi.labels"]]
                ],
                "font": [
                    "case",
                    [
                        "any",
                        ["ref", "Is.Canal"],
                        ["ref", "Is.River"],
                        ["ref", "Is.Bay"],
                        ["ref", "Is.Lake"],
                        ["ref", "Is.Ocean"],
                        ["ref", "Is.Sea"],
                        ["ref", "Is.Fjord"],
                        ["ref", "Is.Strait"]
                    ],
                    ["ref", "Water.Font"],
                    ["ref", "defaultFont"]
                ],
                "shape": "point"
            }
        },
        {
            "id": "water_polygons",
            "styleSet": "tilezen_polygons",
            "when": ["ref", "Is.Water"],
            "technique": "polygon",
            "description": "Water",
            "category": "water",
            "attr": {
                "disable-shading": ["ref", "Polygon.Water.Disable.Shading"],
                "opacity": ["ref", "globalPolygonOpacity"],
                "ambient": ["ref", "Water.Polygon.Ambient.Factor"],
                "softdepth": ["ref", "softDepthThreshold"],
                "color": ["ref", "Water.Color.0m"],
                "diffuse": ["ref", "Water.Polygon.Diffuse.Factor"],
                "flatshading": true
            }
        }
    ]
}