{
    "datasources" : {
        "omv" : {
            "provider" : {
                "name" : "tilezen",
                "server": "https://vector.hereapi.com/v2/vectortiles/base/mc/{z}/{x}/{y}/omv",
                "ignoreExpiredData": true,
                "cache":
                {
                    "path": "cache/tilezen",
                    "diskSize": 268435456,
                    "indexSize": 131072,
                    "dataSize": 1048576
                },
                "tiling" : "QuadTreeMercator",
                "levels" : {
                    "min_storage_level" : 2,
                    "max_storage_level" : 15
                }
            },
            "layers" : [
                {
                    "name" : "tilezen.point",
                    "geometry" : "point",
                    "blacklist_data_layers": [
                        { "data_layer": "buildings" },
                        { "data_layer": "transit" }
                    ]
                },
                {
                    "name" : "tilezen.building_address",
                    "geometry" : "point",
                    "whitelist_data_layers": [
                        { "data_layer": "buildings" },
                        { "data_layer": "transit" }
                    ],
                    "when": ["any", ["has", "name"], ["!=", ["get", "kind"], "building"]]
                },
                {
                    "name" : "tilezen.line",
                    "geometry" : "line",
                    "blacklist_data_layers": [
                        {
                            "data_layer": "road_labels"
                        }
                    ]
                },
                {
                    "name" : "tilezen.road_shield_label",
                    "geometry" : "roadshieldlabel",
                    "whitelist_data_layers": [
                        { "data_layer": "roads" }
                    ]
                },
                {
                    "name" : "tilezen.area",
                    "geometry" : "area",
                    "blacklist_data_layers": [
                        { "data_layer": "buildings" },
                        { "data_layer": "transit" }
                    ]
                },
                {
                    "name" : "tilezen.building_footprint",
                    "geometry" : "area",
                    "whitelist_data_layers": [
                        { "data_layer": "buildings" },
                        { "data_layer": "transit" }
                    ]
                },
                {
                    "name" : "tilezen.building_footprint_outline",
                    "geometry" : "areaoutline",
                    "whitelist_data_layers": [
                        { "data_layer": "buildings" },
                        { "data_layer": "transit" }
                    ]
                },
                {
                    "name" : "tilezen.volume",
                    "geometry" : "areavolume",
                    "whitelist_data_layers": [
                        { "data_layer": "buildings" },
                        { "data_layer": "transit" }
                    ]
                }
            ]
        }
    }
}
