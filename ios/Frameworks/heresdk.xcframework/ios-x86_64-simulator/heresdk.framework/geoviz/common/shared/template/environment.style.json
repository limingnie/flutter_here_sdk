{
    "styles": [
        {
            "styleSet": "clear",
            "technique": "clear",
            "attr": {
                "color": ["ref", "ClearColor"]
            }
        },
        {
            "styleSet": "depthsky",
            "technique": "depthsky",
            "attr": {
                "maxZoomLevel": ["step", ["tilt"],
                    0.0,
                    30.0, null],
                "gradient-sky": ["ref", "Sky.ColorTop"],
                "gradient-intermediate": ["ref", "Sky.ColorIntermediate"],
                "gradient-intermediate-slider": ["ref", "Sky.ColorIntermediatePercent"],
                "gradient-horizon": ["ref", "Sky.ColorBottom"],
                "horizon-blend-range": ["ref", "Sky.Horizon.Blend.Range"],
                "reference-top": ["ref", "Sky.Reference.Top"],
                "fade-start": ["ref", "Sky.AltitudeFadeStart"],
                "fade-end": ["ref", "Sky.AltitudeFadeEnd"],
                "reference-horizon": ["ref", "Sky.Reference.Horizon"]
            }
        },
        {
            "styleSet": "environment",
            "technique": "outdoor",
            "attr": {
                "ambient-intensity": ["ref", "Ambient.Intensity"],
                "ambient-color": ["ref", "Ambient.Color"],
                "main-visual-enabled": false,
                "main-direction": ["make-vector", ["ref", "Light1.Azimuth"], ["ref", "Light1.Altitude"]],
                "main-intensity": ["ref", "Light1.Intensity"],
                "main-color": ["ref", "Light1.Color"],
                "main-has-lens-flare": false,
                "back-direction": ["make-vector", ["ref", "Light2.Azimuth"], ["ref", "Light2.Altitude"]],
                "back-intensity": ["ref", "Light2.Intensity"],
                "back-color": ["ref", "Light2.Color"],
                "back-visual-enabled": false,
                "rim-direction": ["make-vector", ["ref", "Light3.Azimuth"], ["ref", "Light3.Altitude"]],
                "rim-intensity": ["ref", "Light3.Intensity"],
                "rim-color": ["ref", "Light3.Color"],
                "rim-visual-enabled": false
            }
        },
        {
            "styleSet": "geo",
            "technique": "geo",
            "attr": {
                "full-planar-map-transition-factor": ["interpolate", ["linear"], ["zoom"],
                    3, 1.0,
                    4, 0.0]
            }
        },
        {
            "styleSet": "geofog",
            "technique": "geofog",
            "attr": {
                "ground-density": ["ref", "Fog.Density"],
                "top-down-density": 0,
                "far-factor": ["interpolate", ["linear"], ["zoom"],
                    5, 40,
                    10, 20],
                "color": ["ref", "Fog.DistanceColor"],
                "start-distance": ["ref", "Fog.StartDistance"],
                "far-distance": ["*", ["ref", "Fog.FarDistance"], ["ref", "Fog.FarDistanceFactor"]]
            }
        },
        {
            "styleSet": "geohalo",
            "technique": "geohalo",
            "attr": {
                "high-orbit": ["ref", "Halo.HighOrbit"],
                "high-orbit-size": ["ref", "Halo.HighOrbitSize"],
                "low-orbit": ["ref", "Halo.LowOrbit"],
                "low-orbit-size": ["ref", "Halo.LowOrbitSize"],
                "halo-density": ["ref", "Halo.Density"],
                "halo-distribution": ["ref", "Halo.Distribution"],
                "space-fade-start": ["ref", "Halo.SpaceFadeStart"],
                "space-fade-end": ["ref", "Halo.SpaceFadeEnd"],
                "sky-color": ["ref", "Halo.SkyColor"],
                "horizon-color": ["ref", "Halo.HorizonColor"],
                "global-fog-horizon-density": ["ref", "Fog.GlobalHorizonDensity"],
                "global-fog-width": ["ppi-scale", ["ref", "Fog.GlobalWidth"]],
                "maxZoomLevel": 8
            }
        },
        {
            "styleSet": "spacebackground",
            "technique": "spacebackground",
            "attr": {
                "star-density": ["ref", "Spacebackground.StarDensity"],
                "star-brightness": ["ref", "Spacebackground.StarBrightness"],
                "use-nebula": ["ref", "Spacebackground.UseNebula"],
                "nebula-density": ["ref", "Spacebackground.NebulaDensity"],
                "nebula-falloff": ["ref", "Spacebackground.NebulaFalloff"],
                "nebula-color": ["ref", "Spacebackground.NebulaColor"],
                "nebula-steps": ["ref", "Spacebackground.NebulaSteps"],
                "nebula-offset": ["ref", "Spacebackground.NebulaOffset"],
                "maxZoomLevel": 8
            }
        }
    ]
}
